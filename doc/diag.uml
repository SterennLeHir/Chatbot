		trouverMaj(adresseStandardisee: String): String
    chercheAdresse(motsCles: List[String]): (Option[String], List[String])
    existeMot(mot: String, BDDPhrase: Boolean): Boolean
		listeLieux: List[String]
		existe(lieu: String) : Boolean
	}
}

